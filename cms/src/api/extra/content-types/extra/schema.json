    "price": { "type": "decimal" },
    "currency": { "type": "enumeration", "enum": ["EUR"], "default": "EUR" },
    "pricing_unit": { "type": "enumeration", "enum": ["per_booking","per_hour","per_day"], "default": "per_booking" }
  }
}
